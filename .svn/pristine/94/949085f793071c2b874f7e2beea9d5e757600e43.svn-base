<div class="content-header">
  <mat-card-header fxLayout="row" fxLayoutAlign="space-between center"
                   [ngClass]="{'itemSelected': selection && !selection.isEmpty()}">
    <mat-card-title *ngIf="!selection || selection.isEmpty()">
      {{title}}
    </mat-card-title>
    <div>
      <ng-content></ng-content>
    </div>
  </mat-card-header>
</div>
