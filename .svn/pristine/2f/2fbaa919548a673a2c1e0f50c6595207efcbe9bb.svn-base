<block-ui>
    <div class="panel panel-default">
        <div class="panel-heading" *ngIf="exibeBarra">
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group" role="group" aria-label="Busca"> 
                    <button title="Limpar" class="btn btn-info" type="button" (click)="limpar()">
                        Limpar Pesquisa
                    </button>
                </div>
                <div class="btn-group" role="group" aria-label="Busca"> 
                    <button title="Pesquisar" class="btn btn-success" type="button" (click)="pesquisar()">
                        <i class=" glyphicon glyphicon-search"></i>&nbsp;Pesquisar
                    </button>
                </div>
                <div class="btn-group" role="group" aria-label="Busca"> 
                    <button title="Imprimir" class="btn btn-default" type="button" (click)="imprimir()">
                        <i class=" glyphicon glyphicon-print"></i>&nbsp;Imprimir
                    </button>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="row">
                <label class="col-md-8">Exibindo {{itensPorPagina}} de {{listaDados.length}} Registros</label>
            </div>
            <table class="table table-striped table-hover table-bordered table-responsive">
                <thead>
                    <th *ngFor="let col of nomesColunas">
                        {{col}}
                    </th>
                    <th  *ngIf="exibeVisualizacao">
                       <span>Visualizar</span>
                    </th>
                </thead>

                <tbody>
                    <tr *ngFor="let item of listaDados.slice( (paginaAtual-1)*itensPorPagina, (paginaAtual)*itensPorPagina); let indice=index">
                        <td *ngFor="let campo of atributosColunas" >
                            {{item[campo]}}
                        </td>
                        <td colspan="2" class="text-center" style="width:10%"  *ngIf="exibeVisualizacao">
                            <button  class="btn btn-info glyphicon glyphicon-list-alt" title="Visualiza o registro" (click)="visualizar(item)"></button>
                        </td>
                        
                    </tr>
                </tbody>
            </table>

            <!--centralizar-->
            <div class="text-center">
                <div class="row"> 
                    <div class="col col-md-12 text-center">
                        <ngb-pagination [collectionSize]="tamanhoListagem" [pageSize]="itensPorPagina" [ellipses]="true" [maxSize]="3"  
                                    [(page)]="paginaAtual" [rotate]="true" [boundaryLinks]="true"></ngb-pagination>            
                    </div>                    
                </div>
            </div>

        </div>
    </div>    
</block-ui>    