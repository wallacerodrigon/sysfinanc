<div class="side-form">
  <h2>Incluir Lotação</h2>
  <form [formGroup]="rForm" (ngSubmit)="adicionarLotacao(rForm.value)">
    <mat-input-container class="input-basic">
      <input matInput placeholder="Sigla" formControlName="sigla">
      <mat-error *ngIf="!rForm.controls['lotacao'].valid">
        Lotação é obrigatório
      </mat-error>
    </mat-input-container>
    <mat-input-container class="input-basic">
      <textarea matInput placeholder="Descrição (min: 3 caracteres)" formControlName="descricao"></textarea>
      <mat-error *ngIf="!rForm.controls['descricao'].valid">
        Descrição precisa ter mais de 3 caracteres
      </mat-error>
    </mat-input-container>
    <button mat-raised-button type="submit" [disabled]="!rForm.valid">Salvar</button>
    <a mat-button routerLink="/lotacoes">Cancelar</a>
  </form>
</div>
