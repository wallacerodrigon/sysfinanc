package br.net.walltec.api.entidades;

import java.util.Date;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.EnumType;
import javax.persistence.Enumerated;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;

import br.net.walltec.api.anotacoes.ConversorEntityVO;
import br.net.walltec.api.converters.ConverterDataToString;
import br.net.walltec.api.entidades.comum.EntidadeBasica;
import br.net.walltec.api.enums.EnumSimNao;

/**
 * @author wallace
 *
 */
@Entity
@Table(name="usuario")
public class Usuario extends EntidadeBasica<Usuario> {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	@Id
	@GeneratedValue(strategy=GenerationType.IDENTITY)
	@Column(name="co_usuario", nullable=false)
	private Integer idUsuario;
	
	@Column(name="no_usuario", nullable=false, length=50)
	private String nomeUsuario;
	
	@Column(name="no_login", nullable=false, length=10)
	private String descLogin;
	
	@Column(name="ds_senha", nullable=false, length=10)
	private String descSenha;
	
	@Column(name="co_perfil", nullable=false, columnDefinition="char(1)")
	private String perfil;
	
    @Column(name="ds_situacao", length=1, nullable=false)
    private String situacao;

    @Temporal(TemporalType.TIMESTAMP)
    @Column(name="dt_inclusao", nullable=false)
    
    @ConversorEntityVO(atributoDestino="dataInclusaoStr", classeConversor=ConverterDataToString.class)
    private Date dataInclusao;
    
    @Enumerated(EnumType.STRING)
    @Column(name="ds_primeiroacesso", nullable=false, columnDefinition="char(1) default 'S'")
    private EnumSimNao primeiroAcesso;
    
    @Temporal(TemporalType.TIMESTAMP)
    @Column(name="dt_ultimoacesso", nullable=false)
    private Date dataUltimoAcesso;
    
    @Column(name="qt_acessos", nullable=false)
    private Long qtdAcessos;
	    


	/**
	 * @return the idUsuario
	 */
	public Integer getIdUsuario() {
		return idUsuario;
	}

	/**
	 * @param idUsuario the idUsuario to set
	 */
	public void setIdUsuario(Integer idUsuario) {
		this.idUsuario = idUsuario;
	}

	/**
	 * @return the nomeUsuario
	 */
	public String getNomeUsuario() {
		return nomeUsuario;
	}

	/**
	 * @param nomeUsuario the nomeUsuario to set
	 */
	public void setNomeUsuario(String nomeUsuario) {
		this.nomeUsuario = nomeUsuario;
	}

	/**
	 * @return the descLogin
	 */
	public String getDescLogin() {
		return descLogin;
	}

	/**
	 * @param descLogin the descLogin to set
	 */
	public void setDescLogin(String descLogin) {
		this.descLogin = descLogin;
	}

	/**
	 * @return the descSenha
	 */
	public String getDescSenha() {
		return descSenha;
	}

	/**
	 * @param descSenha the descSenha to set
	 */
	public void setDescSenha(String descSenha) {
		this.descSenha = descSenha;
	}

	/**
	 * @return the perfil
	 */
	public String getPerfil() {
		return perfil;
	}

	/**
	 * @param perfil the perfil to set
	 */
	public void setPerfil(String perfil) {
		this.perfil = perfil;
	}

	/**
	 * @return the situacao
	 */
	public String getSituacao() {
		return situacao;
	}

	/**
	 * @param situacao the situacao to set
	 */
	public void setSituacao(String situacao) {
		this.situacao = situacao;
	}

	/**
	 * @return the dataInclusao
	 */
	public Date getDataInclusao() {
		return dataInclusao;
	}

	/**
	 * @param dataInclusao the dataInclusao to set
	 */
	public void setDataInclusao(Date dataInclusao) {
		this.dataInclusao = dataInclusao;
	}

	/**
	 * @return the primeiroAcesso
	 */
	public EnumSimNao getPrimeiroAcesso() {
		return primeiroAcesso;
	}

	/**
	 * @param primeiroAcesso the primeiroAcesso to set
	 */
	public void setPrimeiroAcesso(EnumSimNao primeiroAcesso) {
		this.primeiroAcesso = primeiroAcesso;
	}

	/**
	 * @return the dataUltimoAcesso
	 */
	public Date getDataUltimoAcesso() {
		return dataUltimoAcesso;
	}

	/**
	 * @param dataUltimoAcesso the dataUltimoAcesso to set
	 */
	public void setDataUltimoAcesso(Date dataUltimoAcesso) {
		this.dataUltimoAcesso = dataUltimoAcesso;
	}

	/**
	 * @return the qtdAcessos
	 */
	public Long getQtdAcessos() {
		return qtdAcessos;
	}

	/**
	 * @param qtdAcessos the qtdAcessos to set
	 */
	public void setQtdAcessos(Long qtdAcessos) {
		this.qtdAcessos = qtdAcessos;
	}
	
	
	
}
