package br.net.walltec.api.excecoes;



import javax.ws.rs.WebApplicationException;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Response.Status;

/**
 * @author wallace
 * 
 */
public class RestNegocioException extends WebApplicationException {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public RestNegocioException(){
		super();
	}

	
	public RestNegocioException(Status status){
		super(status.getStatusCode());
	}
	
	public RestNegocioException(String mensagem){
		this( Response.serverError().entity(mensagem).build() );
	}	
	
	public Response getServerError(){
		return Response.serverError().build();
	}
	
    public RestNegocioException(final Response response) {
       super(response);
    }	
	
    
 
}
