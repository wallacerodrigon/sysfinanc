package br.net.walltec.api.persistencia.dao.comum;



import java.io.Serializable;
import java.util.List;
import java.util.Map;

import javax.persistence.EntityTransaction;

import br.net.walltec.api.excecoes.PersistenciaPadraoException;


/**
 * @author wallace
 *
 * @param <T>
 */
public interface PersistenciaPadraoDao<T>  {

	 T incluir(T objeto) throws PersistenciaPadraoException;

	 void alterar(T objeto) throws PersistenciaPadraoException;
	 
	 void excluir(T objeto) throws PersistenciaPadraoException;
	 
	 T find(Serializable id) throws PersistenciaPadraoException;
	 
	 T pesquisar(T filtro) throws PersistenciaPadraoException;
	 
	 List<T> listar() throws PersistenciaPadraoException;

	 List<T> listar(T objetoFiltro) throws PersistenciaPadraoException;	
	 
	 void executarUpdate(String sqlNativo) throws PersistenciaPadraoException;
	 
	 void executarUpdateHql(String script) throws PersistenciaPadraoException;
	 
	 List<Object[]> listarQueryNativa(String sql) throws PersistenciaPadraoException;
	 
	 List<Object[]> listarQueryNativaWithParams(String sql, Map<String, Object> parametros) throws PersistenciaPadraoException;
	 
	 List<T> filtrarPorHqlAndParams(String hql, Map<String, Object> parametros) throws PersistenciaPadraoException;
	 
	 EntityTransaction getTransaction() throws PersistenciaPadraoException;
	 
	 List<T> listarHql(String hql) throws PersistenciaPadraoException;
}
