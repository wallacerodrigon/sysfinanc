<div class="panel panel-default">
    <div class="panel-heading" *ngIf="exibeNovo || exibeFiltro">
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group" aria-label="Novo">
                <button title="Novo cadastro" *ngIf="exibeNovo" (click)="abrirNovoRegistro()" class="btn btn-success">
                    <i class=" glyphicon glyphicon-plus"></i>&nbsp;Novo
                </button>
            </div>
            <div class="btn-group" role="group" aria-label="Busca"> 
                <button title="Filtros" *ngIf="exibeFiltro" (click)="abrirFiltro()" class="btn btn-primary">
                    <i class=" glyphicon glyphicon-filter"></i>&nbsp;Pesquisar
                </button>
            </div>
            <div class="btn-group" role="group" aria-label="Busca"> 
                <button title="Filtros" *ngIf="exibeFiltro" (click)="limparFiltro()" class="btn btn-primary">
                    <i class=" glyphicon glyphicon-search"></i>&nbsp;Listar Tudo
                </button>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <div class="row">
            <label class="col-md-8">Exibindo {{itensPorPagina}} de {{listaDados.length}} Registros</label>
        </div>
        <table class="table table-striped table-hover table-bordered table-responsive">
            <thead>
                <th *ngFor="let col of nomesColunas">
                    <span text-center>{{col}}</span>
                </th>
                <th colspan="2" class="text-center">
                    Ações
                </th>
            </thead>

            <tbody>
                <tr *ngFor="let item of listaDados.slice( (paginaAtual-1)*itensPorPagina, (paginaAtual)*itensPorPagina); let indice=index">
                    <td *ngFor="let campo of atributosColunas" >
                        {{item[campo]}}
                    </td>
                    
                    <td colspan="2" class="text-center" style="width:10%" >
                        <button  class="btn btn-info glyphicon glyphicon-edit" title="Edita um registro" (click)="editar(item, indice)"></button>
                        <button  class="btn btn-danger glyphicon glyphicon-trash" title="Exclui um registro" (click)="excluir(item, indice)"></button>
                    </td>
                </tr>
            </tbody>
        </table>

        <!--centralizar-->
        <div class="text-center">
            <div class="row"> 
                <div class="col col-md-12 text-center">
                    <ngb-pagination [collectionSize]="tamanhoListagem" [pageSize]="itensPorPagina" [ellipses]="true" [maxSize]="3"  
                                [(page)]="paginaAtual" [rotate]="true" [boundaryLinks]="true"></ngb-pagination>            
                </div>                    
            </div>
        </div>

    </div>
</div>    