import {Component} from '@angular/core';
import {AlertaComponent} from '../../componentes/mensagens/alert.component';
import { DialogComponent, DialogService } from "ng2-bootstrap-modal";
import { ActivatedRoute, Router } from '@angular/router';
import {LoginVO} from '../../dominio/vo/login-vo';

@Component({
    selector: 'home-component',
    templateUrl: './home.component.html'
})
export class HomePageComponent {
    private isAdministrador: boolean = false;

    constructor( public _dialogService: DialogService, public router: Router){
         let vo: LoginVO = JSON.parse(sessionStorage.getItem("usuario"));
         this.isAdministrador = vo ? vo.administrador : false;
    }
    
    isNotImplementado(){
        new AlertaComponent(this._dialogService)
                .exibirMensagem('Funcionalidade sendo implementada. Aguarde novas vers√µes!');
    }

    logout(){
        sessionStorage.clear();
        this.router.navigate(['/']);
    }
}