  <div class="block">
    <span fxFlex></span> 
    <span><a mat-raised-button color="accent" routerLink="incluir">Incluir</a></span>
  </div>
  <br>
  <mat-spinner class="block" *ngIf="!dataSource._lotacoesDatabase.data.length"></mat-spinner>
  <mat-card class="block">
      <mat-form-field class="example-full-width" id='buscar'>
          <mat-icon matSuffix >search</mat-icon>
          <input matInput type="search" placeholder="Buscar" (keyup)="startFilter($event)">
      </mat-form-field>

    <mat-table #table [dataSource]="dataSource" matSort>

      <!--- Note that these columns can be defined in any order.
            The actual rendered columns are set as a property on the row definition" -->

      <!-- Coluna ID -->
      <ng-container cdkColumnDef="lotacao">
        <mat-header-cell *cdkHeaderCellDef mat-sort-header> Lotação </mat-header-cell>
        <mat-cell *cdkCellDef="let row"> {{row.lotacao}} </mat-cell>
      </ng-container>

      <!-- Sigla -->
      <ng-container cdkColumnDef="sigla">
        <mat-header-cell *cdkHeaderCellDef mat-sort-header> Sigla </mat-header-cell>
        <mat-cell *cdkCellDef="let row"> {{row.sigla}} </mat-cell>
      </ng-container>

      <!-- Descrição -->
      <ng-container cdkColumnDef="descricao">
        <mat-header-cell *cdkHeaderCellDef mat-sort-header> Descrição </mat-header-cell>
        <mat-cell *cdkCellDef="let row"> {{row.descricao}} </mat-cell>
      </ng-container>

      <!-- Ação -->
      <ng-container cdkColumnDef="acao">
        <mat-header-cell *cdkHeaderCellDef> Ação </mat-header-cell>
        <mat-cell *cdkCellDef="let row"> 
          <div>
            <a [routerLink]="'editar/' + row.lotacao" mat-button><i class="material-icons" fxFlex>mode_edit</i></a>
            <button mat-button (click)="openDialog(row.lotacao)" fxFlex><i class="material-icons">delete</i></button>
          </div>
        </mat-cell>
      </ng-container>

      <mat-header-row *cdkHeaderRowDef="displayedColumns"></mat-header-row>
      <mat-row *cdkRowDef="let row; columns: displayedColumns;"></mat-row>
    </mat-table>
  </mat-card>
    <mat-paginator #paginator [length]="dataSource._lotacoesDatabase.data.length" [pageIndex]="0" [pageSize]="20" [pageSizeOptions]="[10, 20, 50, 100]">
    </mat-paginator>
  <div class="view-side-form">
    <router-outlet></router-outlet>
  </div>