<div class="modal-dialog">
    <div class="modal-content container-fluid" >
        <div class="modal-header">
          <button type="button" class="close" (click)="close()" >&times;</button>
          <h4>Utilizar Parte de Lançamento</h4>
        </div>
  
        <div class="modal-body">
            <form class=" form-group">
                <div class="row">
                    <div class="col col-md-12 col-xs-12 col-lg-6">
                        <label for="dataUtilizacao">Data Utilização</label>                
                        <input type="text" class="form-control" #dataUtilizacao id="dataUtilizacao" name="dataUtilizacao">
                    </div>
                    <div class="col col-md-12 col-xs-12 col-lg-6">
                            <label for="valor">Valor Utilizado</label>                
                            <input type="text" class="form-control"  
                            #valorUtilizadoStr
                            onkeypress="moeda(this);"
                            onkeyup="moeda(this);" 
                            name="valorUtilizadoStr"
                            >
                    </div>
                </div>

                <div class="row">
                    <div class="col col-md-12 col-xs-12 col-lg-12">
                            <label for="descricao">Descrição</label>                
                            <input type="text" class="form-control" 
                                [(ngModel)]="utilizacaoDto.descricao"
                            maxlength="50" required name="descricao">
                    </div>
                </div>
                
                <hr>
                <div class="row">
                    <button class="btn btn-primary col col-md-12 col-xs-12 col-lg-12" (click)="registrar()">Registrar</button>
                </div>
            </form>
        </div>
</div>    