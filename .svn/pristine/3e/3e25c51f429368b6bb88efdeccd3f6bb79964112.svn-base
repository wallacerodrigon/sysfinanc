import { slideInOutAnimation } from '../../../_animation/slide-in-out.animation';
import { Router } from '@angular/router';
import { LotacoesDatabase } from '../lotacoes-database';
import { Lotacao } from '../lotacao';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';
import { Component, HostBinding, OnInit } from '@angular/core';

@Component({
  selector: 'app-lotacoes-incluir',
  templateUrl: './lotacoes-incluir.component.html',
  styleUrls: ['./lotacoes-incluir.component.css'],
  animations: [slideInOutAnimation],
})
export class LotacoesIncluirComponent implements OnInit {
  @HostBinding('@slideInOutAnimation') slideInOutAnimation = true;

  rForm: FormGroup;

  constructor(
    private fb: FormBuilder,
    private _lotacoesDatabase: LotacoesDatabase,
    private router: Router
   ) { }

  ngOnInit() {
    this.rForm = this.fb.group({
      'loca_nm_nome': [null, Validators.required],
      'loca_ds_descricao': [null,
        Validators.compose([
          Validators.required,
          Validators.minLength(3),
          Validators.maxLength(4000)
        ])
      ],
    });
  }

  adicionarLotacao(post) {
    const lotacao = <Lotacao>{};
    lotacao.sigla = post.sigla;
    lotacao.descricao = post.descricao;

    this._lotacoesDatabase.incluir(lotacao);
    this.router.navigate(['/lotacoes']);
  }

}
