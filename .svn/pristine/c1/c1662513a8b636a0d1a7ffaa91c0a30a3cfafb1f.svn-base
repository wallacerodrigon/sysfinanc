/* You can add global styles to this file, and also import other style files */
@import '~https://fonts.googleapis.com/icon?family=Material+Icons';
@import '~https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic';
@import "~@angular/material/prebuilt-themes/indigo-pink.css";

.centralizarLogin { height: 185px; margin: 6% auto 0; position: relative; width: 550px; }
.centralizar { width: 1000px; margin-top: 10px; position: relative; margin:0 auto; }


* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

md-sidenav-container {
  height: 100vh;
}

md-sidenav {
  width: 240px;
  padding: 1em;
}

md-spinner {
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0;
}

snack-bar-container.success-snackbar {
  background-color: green;
}
.success-snackbar .mat-simple-snackbar {
  color: #EEE;
}

snack-bar-container.warn-snackbar {
  background-color: red;
}
.warn-snackbar .mat-simple-snackbar {
  color: #EEE;
}

.content {
  padding: 1em;
}

.mat-toolbar-layout {
  width: 100%;
}

.icon-20 {
  font-size: 20px;
}

.input-basic {
  width: 100%;
  padding-bottom: 10px;
}

.view-side-form .side-form {
  position: absolute;
  z-index: 100;
  top: 0;
  right: 0;
  width: 80%;
  height: 100%;
  overflow: auto;
  background: #fff;
  padding: 20px;
  border-left: 1px solid #e0e0e0;
}
