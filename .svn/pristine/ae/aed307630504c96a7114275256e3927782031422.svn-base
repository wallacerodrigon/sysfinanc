package br.net.walltec.api.rest.webservices;

import java.io.Serializable;

import javax.ws.rs.DELETE;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.PUT;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.core.Response;

import br.net.walltec.api.excecoes.RestNegocioException;
import br.net.walltec.api.vo.GerenciadorPadraoVO;

/**
 * @author wallace
 *
 */
public interface ContratoPadraoRest<V extends GerenciadorPadraoVO> extends Serializable {

	 @GET
	 @Path("/ping")
	 Response novo() throws RestNegocioException;
	
	 @POST
	 Response incluir(V objeto) throws RestNegocioException;
	 
	 @PUT
	 Response alterar(V objeto) throws RestNegocioException;
	 
	 @DELETE
	 @Path("/{idChaveObjeto}")
	 Response excluir(@PathParam("idChaveObjeto") Integer idChaveObjeto) throws RestNegocioException;	
	 
	 @GET
	 @Path("/{idProcura}")
	 Response procurar(@PathParam("idProcura") Integer idProcura) throws RestNegocioException;	
	 
	 @GET
	 Response listar() throws RestNegocioException;
	 
}
