<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>e-sysfinanc</artifactId>
  <packaging>war</packaging>
  <name>e-sysfinanc</name>
  <description>Páginas web do projeto</description>

  <parent>
  	<groupId>br.net.walltec</groupId>
  	<artifactId>sysfinanc-parent</artifactId>
  	<version>${sistema.version}</version>
  	<relativePath>../sysfinanc-parent/pom.xml</relativePath>
  </parent>

	<properties>
		<buildNumber>${maven.buildNumber}</buildNumber>
		<destino.dir>WebContent</destino.dir>
		<dist.dir>angular/dist</dist.dir>
		<gera.build>${project.basedir}\gera-build.bat</gera.build>
	</properties>
  
  
  <build>
  	<finalName>e-sysfinanc</finalName>
    <sourceDirectory>src</sourceDirectory>
    <plugins>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>

		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-antrun-plugin</artifactId>
			<executions>
				<execution>
					<phase>prepare-package</phase>
					<configuration>
						<tasks>
							<!-- copiar o app.component, alterá-lo e depois voltá-lo -->
							<exec executable="${gera.build}"></exec>
							<delete>
								<fileset dir="${destino.dir}" id="id">
								    <include name="*.bundle*"/>
									<include name="*.ico"/>
									<include name="*.html"/>
								</fileset>
					
							</delete>
							<copy todir="${destino.dir}" >
								<fileset dir="${dist.dir}"  />
							</copy>
							
						</tasks>
					</configuration>
					<goals>
						<goal>run</goal>
					</goals>
				</execution>
			</executions>
		</plugin>

      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <warName>e-sysfinanc</warName>
          <warSourceDirectory>WebContent</warSourceDirectory>
          <failOnMissingWebXml>false</failOnMissingWebXml>
        </configuration>
      </plugin>
      
      
    </plugins>
  </build>
</project>