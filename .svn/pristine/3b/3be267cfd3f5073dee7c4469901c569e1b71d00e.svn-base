import { Injectable } from '@angular/core';
import {HttpInterceptor} from './http-interceptor';
import {TurmaVO} from '../dominio/vo/turma-vo';
import {ModalidadeVO} from '../dominio/vo/modalidade-vo';
import {ProfessorVO} from '../dominio/vo/professor-vo';
import {AbstractServicos} from './abstract.servicos';
import {Observable} from "rxjs/Rx";
import {Formatadores} from '../utilitarios/formatadores';

@Injectable()
export class TurmaService extends AbstractServicos<TurmaVO> {


  protected uri: string = '/turma';

  constructor(protected http: HttpInterceptor) { 
      super();
  }

   transformar(element: any): TurmaVO {
       let vo: TurmaVO = new TurmaVO();
       vo.montarTurma(element);
       return vo;
  };  


  public recuperarDadosParaCombos(): any  {
      return this.http
            .get(this.uri+'/inicializa')
            .map(dados => dados.json()
            );

    
  }

}
