package br.net.walltec.api.rest.webservices;

import javax.enterprise.context.RequestScoped;
import javax.inject.Inject;
import javax.inject.Named;
import javax.interceptor.Interceptors;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Response.Status;

import br.net.walltec.api.excecoes.RestNegocioException;
import br.net.walltec.api.negocio.servicos.CrudPadraoServico;
import br.net.walltec.api.negocio.servicos.PlanoPagamentoServico;
import br.net.walltec.api.rest.RequisicaoRestPadrao;
import br.net.walltec.api.rest.interceptors.RequisicaoInterceptor;
import br.net.walltec.api.vo.PlanoPagamentoVO;

/**
 * @author wallace
 *
 */
@Named
@RequestScoped

@Path("/plano-pagamento")
@Produces(value={MediaType.APPLICATION_JSON})
@Interceptors({RequisicaoInterceptor.class})

@SuppressWarnings("serial")

public class PlanoPagamentoRest extends RequisicaoRestPadrao<PlanoPagamentoVO> {
	@Inject
	private PlanoPagamentoServico servico;
	
	/* (non-Javadoc)
	 * @see br.net.walltec.api.rest.RequisicaoRestPadrao#getServico()
	 */
	@Override
	public CrudPadraoServico<?, ?> getServico() {
		return servico;
	}



	/* (non-Javadoc)
	 * @see br.net.walltec.api.rest.webservices.ContratoPadraoRest#excluir(br.net.walltec.api.vo.GerenciadorPadraoVO)
	 */
	@Override
	public Response excluir(Integer idChaveObjeto) throws RestNegocioException {
		// TODO Auto-generated method stub
		try {
			servico.excluir(idChaveObjeto);
			return Response.noContent().build();
		} catch (Exception e) {
			throw new RestNegocioException(Status.INTERNAL_SERVER_ERROR);
		}
	}



	/* (non-Javadoc)
	 * @see br.net.walltec.api.rest.webservices.ContratoPadraoRest#incluir(br.net.walltec.api.vo.GerenciadorPadraoVO)
	 */
	@Override
	public Response incluir(PlanoPagamentoVO objeto)
			throws RestNegocioException {
		// TODO Auto-generated method stub
		return null;
	}



	/* (non-Javadoc)
	 * @see br.net.walltec.api.rest.webservices.ContratoPadraoRest#alterar(br.net.walltec.api.vo.GerenciadorPadraoVO)
	 */
	@Override
	public Response alterar(PlanoPagamentoVO objeto)
			throws RestNegocioException {
		// TODO Auto-generated method stub
		return null;
	}
}
